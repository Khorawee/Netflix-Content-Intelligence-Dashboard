3ï¸âƒ£ à¸§à¸²à¸‡à¹‚à¸„à¹‰à¸”à¸™à¸µà¹‰à¸¥à¸‡à¹„à¸›:
import pandas as pd
import sys
from pathlib import Path

# à¸•à¸±à¹‰à¸‡ path à¹‚à¸›à¸£à¹€à¸ˆà¸„
sys.path.append(r"C:\your_path\netflix_project")

from src.powerbi.recommend_powerbi import recommend_tfidf

titles = dataset["title"].astype(str).tolist()
rows = []
for t in titles:
    recs = recommend_tfidf(t, top_n=5)
    for r in recs:
        rows.append({
            "query": t,
            "recommended_title": r["title"],
            "score": r["score"]
        })

result = pd.DataFrame(rows)
dataset = result


